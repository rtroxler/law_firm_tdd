.card.bg-neutral.flex.place-items-center.w-72
  .card-body
    %h2.card-title.uppercase.tracking-widest Log in
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        = f.label :email, class: 'label'
        = f.email_field :email, autofocus: true, autocomplete: "email", class: 'input'
      .field
        = f.label :password, class: 'label'
        = f.password_field :password, autocomplete: "current-password", class: 'input'
      - if devise_mapping.rememberable?
        .flex.items-center.gap-2
          = f.check_box :remember_me, class: 'checkbox checkbox-primary'
          = f.label :remember_me, class: 'label'
      .card-actions.justify-center
        = f.submit "Log in", class: 'btn btn-primary'
